<h1>Profile {{user.email}} </h1>

<form action="/post-page/create" method="post" enctype="multipart/form-data">
  <label for="title">Title</label>
  <input name="title" type="text" />
  <label for="content">Content</label>
  <input name="content" type="text" />
  <label for="photo"><b>Photo:</b></label>
  <input type="file" name="photo" value="{{post.photo}}" />
  <button type="submit">Create!</button>
</form>


<p>Email: {{user.email}}</p>
{{#if user}}
    {{#if user.photo}}
      <img src={{user.photo}} alt="user-image">
    {{/if}}
    {{/if}}
<p>Username: {{user.username}}</p>
<p>userId: {{user.id}}</p>
<p>posts :</p>
<div>
  <ul>
    {{#each posts}}
    <li><a href="/post-page/{{this.postId}}">{{this.title}} {{this.content}} <img src="{{this.photo}}" alt="post-image"> </a></li>
  {{/each}}
  </ul>
</div>

<li><a href="profile-page/edit/{{user.id}}",> Edit </a></li>

