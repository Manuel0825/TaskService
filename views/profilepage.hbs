
<h1>Profile {{user.email}}</h1>


  <p>Email: {{user.email}}</p>
  {{#if user}}
    {{#if user.photo}}
      <img src={{user.photo}} alt="user-image" style="width: 150px; border-radius: 50px">
    {{/if}}
  {{/if}}
  <p>Username: {{user.username}}</p>
  <p>Mobile Number: {{user.number}}</p>

  <form action="/post-page/create" method="post" enctype="multipart/form-data">
    <label for="title">Title</label>
    <input name="title" type="text" />
    <label for="content">Content</label>
    <input name="content" type="text" />
    <label for="category">Category</label>
    <input name="category" type="text" />
    <label for="photo"><b>Photo:</b></label>
    <input type="file" name="photo" value="{{post.photo}}" />
    <button type="submit">Create!</button>
  </form>

  <p>posts :</p>
 
   <div class="posts-container">
  {{#each posts}}
    <li><a href="/post-page/{{this.postId}}">
    <h2>{{this.title}}</h2> 
    <img src="{{this.photo}}" alt="post-image"  style="max-width: 350px; max-height:200px">
    <p>{{this.content}}</p>
    <p>{{this.category}}</p>
    </a></li>
  {{/each}}
</ul>
</div>

  <li><a href="profile-page/edit/{{user.id}}">Edit</a></li>

  <a href="/auth/logout">Logout</a>

